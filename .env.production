# =============================================
# PRODUCCIÓN - SISTEMA EMAIL-FIRST SIN FIREBASE AUTH
# =============================================

# Configuración del servidor
PORT=3000
NODE_ENV=production

# =============================================
# JWT CONFIGURATION - CRÍTICO para login
# =============================================
JWT_SECRET=production-super-secure-jwt-secret-key-256-bits-minimum
JWT_EXPIRES_IN=24h

# =============================================
# CORS Y FRONTEND
# =============================================
FRONTEND_URL=https://utalk-frontend.vercel.app,https://utalk-frontend-production.vercel.app

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
